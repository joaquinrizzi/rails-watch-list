<div class="container mt-3">
  <div class="row">
    <div class="col">
      <div class="mb-3">
        <h1>My lists (<%=@lists.size%> )</h1>
      </div>
    </div>
  </div>
  <div class="row row-cols-md-2 row-cols-lg-3 g-4 card-group">
    <% @lists.each do |list|%>
    <div class="col">
      <div class="card shadow p-3 mb-5 bg-body-tertiary rounded h-100">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-12">
              <h2 class="card-title"><%= list.name%></h2>
            </div>
          </div>
        </div>
        <div class="card-footer bg-transparent">
          <div class="row">
            <div class="col-lg-6">
              <small class="text-body-secondary">
                <%= link_to "More info", list_path(list)%>
              </small>
            </div>
            <div class="col-lg-6 text-end">
              <small class="text-body-secondary">
                <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                  <i class="fa-solid fa-trash"></i>
                <%end%>
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%end%>
  </div>
</div>
