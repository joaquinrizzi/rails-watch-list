<div class="container mt-3">
  <div class="banner d-flex mb-4">
    <div >
        <h1 class="container text-center align-items-center"><%= @list.name%></h1>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-12 text-end d-inline-flex gap-1">
      <%= link_to "Add movie", new_list_bookmark_path(@list), {:class => "btn btn-primary", "data-bs-toggle" => "collapse", :href => "#collapseBookmarkForm", :role => "button", "aria-expanded" => "false", "aria-controls" => "collapseBookmarkForm" } %>
    </div>
  </div>
  <div class="row mb-4" >
    <div class="col collapse <%='show' if @show%>" id="collapseBookmarkForm">
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie %>
        <%= f.button :submit, class: "btn btn-primary", value: "Add movie" %>
      <% end %>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col">
      <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner rounded">
          <% @list.bookmarks.each do |bookmark|%>
            <div class="carousel-item active" style="height: 20em;">
              <%= image_tag bookmark.movie.poster_url, class: "d-block w-100", alt: bookmark.movie.title %>
              <div class="carousel-caption d-none d-md-block">
                <h2 class="card-title"><%= bookmark.movie.title%></h2>
                <p class="card-text"><%= bookmark.movie.overview %></p>
              </div>
            </div>
          <%end%>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>
</div>
